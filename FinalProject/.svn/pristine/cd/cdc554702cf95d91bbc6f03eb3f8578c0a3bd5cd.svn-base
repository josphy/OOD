package game.controller;

import java.awt.Component;
import java.awt.EventQueue;

import common.ICRCmd2ModelAdapter;
import game.model.GameModel;
import game.model.IGameModel2ViewAdapter;
import game.view.GameView;
import game.view.IGameView2ModelAdapter;
import map.MapLayer;

/**
 * Game Controller of mini-mini-MVC
 */
public class GameController {
	
	/**
	 * game model instance
	 */
	private GameModel gameModel;
	
	/**
	 * game view instance
	 */
	private GameView gameView;

	/**
	 * game controller constructor
	 */
	public GameController(ICRCmd2ModelAdapter clientModelAdpt) {
		
		gameModel = new GameModel(clientModelAdpt, new IGameModel2ViewAdapter() {

			@Override
			public void show(MapLayer layer) {
				gameView.addMapLayer(layer);
			}
			
		});
		
		gameView = new GameView(new IGameView2ModelAdapter() {

			@Override
			public boolean submitAnswer() {
				return gameModel.submitToServer();
				
			}
			
		});
	}
	
	/**
	 * start mini-mini-MVC
	 */
	public void start() {
		gameView.start();
		gameModel.start();
	}
	
	public Component getView() {
		return gameView.getView();
	}
	

	/**
	 * Launch the application.
	 * @param args externally provided parameters
	 */
	public static void main(String[] args) {
		EventQueue.invokeLater(new Runnable() {
			public void run() {
				try {
					GameController gameController = new GameController();
					gameController.start();
				} catch (Exception e) {
					e.printStackTrace();
				}
			}
		});
	}

}
